                                <a href="{{ base_url }}/category/earrings/{{ item.id }}" class="explore-item">
                                    <img src="data:image/png;base64,">
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="swiper-scrollbar"></div>
            </div>
        </div>
    </section>

    <script>var baseUrl = "{{ base_url }}";</script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="{{ base_url }}/assets/js/add-to-cart.js"></script>
    <script>
        var swiper = new Swiper(".displaySwiper", {
            slidesPerView: 4,
            spaceBetween: 40,
            scrollbar: {
                el: ".swiper-scrollbar",
                draggable: true
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
        });
    </script>
{% endblock %}