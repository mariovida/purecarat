{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <section class="hero">
        <div class="page-content">
            <div class="row">
                <div class="col-6 d-flex flex-column justify-content-center align-items-start h-100">
                    <h1>Discover Timeless Elegance</h1>
                    <h2>Welcome to PureCarat, where every piece of jewelry is crafted with precision and passion.<br/><br/>Our commitment to quality ensures that each gemstone sparkles with its unique brilliance, creating timeless pieces that resonate with your style.</h2>
                </div>
                 <div class="col-6 d-flex justify-content-end align-items-center h-100">
                    <img class="hero_illustration" src="{{ base_url }}/assets/images/hand-jewelry.svg" />
                </div>
            </div>
            {# <img class="hero_background" src="{{ base_url }}/assets/images/plant.svg" alt="Plant" /> #}
        </div>
    </section>

    {{ include('blocks/store-info.html.twig') }}

    <section class="display-section">
        <div class="page-content">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Youâ€™ve got an edge - your rings should too.</h3>
                <a href="{{ base_url }}/rings" class="explore-more">Explore more</a>
            </div>
            <div class="swiper displaySwiper">
                <div class="swiper-wrapper">
                    {% for ring in ringsData|slice(0, 10) %}
                        <div class="swiper-slide">
                            <div class="display-section_image">
                                <img src="{{ base_url }}/assets/images/rings/{{ ring.images[0].filename }}" alt="{{ ring.name }}" class="ring-image">
                            </div>
                            <div class="display-section_info">
                                <h4>{{ ring.name }}</h4>
                                <p>{{ ring.description }}</p>
                            </div>
                            <div class="display-section_price">
                                <span>{{ (ring.price/100)|number_format(2, '.', ',') }} EUR</span>
                            </div>
                            <div class="display-section_btns">
                                <button class="add-to-cart" data-id="{{ ring.id }}">Add to cart</button>
                                <a href="{{ base_url }}/category/rings/{{ ring.id }}" class="explore-item">
                                    <img src="data:image/png;base64,">
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="swiper-scrollbar"></div>
                {#<div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>#}
            </div>
        </div>
    </section>

    <section class="display-section">
        <div class="page-content">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Gifts for him - designed with comfort and style.</h3>
                <a href="{{ base_url }}/men-jewelry" class="explore-more">Explore more</a>
            </div>
            <div class="swiper displaySwiper">
                <div class="swiper-wrapper">
                    {% for item in menJewelryData|slice(0, 10) %}
                        <div class="swiper-slide">
                            <div class="display-section_image">
                                <img src="{{ base_url }}/assets/images/men/{{ item.images[0].filename }}" alt="{{ item.name }}" class="ring-image">
                            </div>
                            <div class="display-section_info">
                                <h4>{{ item.name }}</h4>
                                <p>{{ item.description }}</p>
                            </div>
                            <div class="display-section_price">
                                <span>{{ (item.price/100)|number_format(2, '.', ',') }} EUR</span>
                            </div>
                            <div class="display-section_btns">
                                <button class="add-to-cart" data-id="{{ ring.id }}">Add to cart</button>
                                <a href="{{ base_url }}/category/rings/{{ item.id }}" class="explore-item">
                                    <img src="data:image/png;base64,">
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="swiper-scrollbar"></div>
            </div>
        </div>
    </section>

     <section class="display-section">
        <div class="page-content">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Elevate your jewelry ensemble with uniquely crafted earrings.</h3>
                <a href="{{ base_url }}/earrings" class="explore-more">Explore more</a>
            </div>
            <div class="swiper displaySwiper">
                <div class="swiper-wrapper">
                    {% for item in earringsData|slice(0, 10) %}
                        <div class="swiper-slide">
