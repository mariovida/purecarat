{% extends 'base.html.twig' %}

{% block title %}Men jewelry | {% endblock %}

{% block body %}
   <section class="breadcrumbs">
        <div class="page-content">
            <div class="row">
                <div class="col-12">
                    <p>Shop all > <span>Men jewelry</span></p>
                </div>
            </div>
        </div>
    </section>

    <section class="filters">
        <div class="page-content">
            <div class="row">
                <div class="col-12">
                    <button data-filter="all">All</button>
                    {% set uniqueFilters = [] %}
                    {% for item in menJewelryData %}
                        {% if item.filter not in uniqueFilters and item.filter is not empty %}
                            <button data-filter="{{ item.filter }}">{{ item.filter }}</button>
                            {% set uniqueFilters = uniqueFilters|merge([item.filter]) %}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <section class="display-section">
        <div class="page-content">
            <div class="row">
                {% for item in menJewelryData %}
                    <div class="col-3 ring-item" data-filter="{{ item.filter }}">
                        <div class="display-section_item">
                            <div class="display-section_image">
                                <img src="{{ base_url }}/assets/images/men/{{ item.images[0].filename }}" alt="{{ item.name }}" class="ring-image">
                            </div>
                            <div class="display-section_info">
                                <h4>{{ item.name }}</h4>
                                <p>{{ item.description }}</p>
                            </div>
                            <div class="display-section_price">
                                <span>{{ (item.price/100)|number_format(2, '.', ',') }} EUR</span>
                            </div>
                            <div class="display-section_btns">
                                <button class="add-to-cart" data-id="{{ item.id }}">Add to cart</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}  
            </div>
        </div>
    </section>

    <script src="{{ base_url }}/assets/js/filtering.js"></script>
{% endblock %}