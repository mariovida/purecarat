{% extends 'base.html.twig' %}

{% block title %}Rings | {% endblock %}

{% block body %}
   <section class="breadcrumbs">
        <div class="page-content">
            <div class="row">
                <div class="col-12">
                    <p>Shop all > <span>Rings</span></p>
                </div>
            </div>
        </div>
    </section>

    <section class="filters">
        <div class="page-content">
            <div class="row">
                <div class="col-12">
                    <button data-filter="all">All</button>
                    {% set uniqueFilters = [] %}
                    {% for ring in ringsData %}
                        {% if ring.filter not in uniqueFilters %}
                            <button data-filter="{{ ring.filter }}">{{ ring.filter }}</button>
                            {% set uniqueFilters = uniqueFilters|merge([ring.filter]) %}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <section class="display-section" data-aos="fade-up" data-aos-duration="700">
        <div class="page-content">
            <div class="row">
                {% for ring in ringsData %}
                    <div class="col-3 ring-item" data-filter="{{ ring.filter }}">
                        <div class="display-section_item">
                            <div class="display-section_image">
                                <img src="{{ base_url }}/assets/images/rings/{{ ring.images[0].filename }}" alt="{{ ring.name }}" class="ring-image">
                            </div>
                            <div class="display-section_info">
                                <h4>{{ ring.name }}</h4>
                                <p>{{ ring.description }}</p>
                            </div>
                            <div class="display-section_price">
                                <span>{{ (ring.price/100)|number_format(2, '.', ',') }} EUR</span>
                            </div>
                            <div class="display-section_btns">
                                <button class="add-to-cart" data-id="{{ ring.id }}">Add to cart</button>
                                <a href="{{ base_url }}/category/rings/{{ ring.id }}" class="explore-item">
                                    <img src="data:image/png;base64,">
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}  
            </div>
        </div>
    </section>

    <script src="{{ base_url }}/assets/js/filtering.js"></script>
{% endblock %}